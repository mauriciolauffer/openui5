{
	"_version": "1.81.0",
	"sap.app": {
		"id": "card.explorer.object.imageFitType",
		"type": "card",
		"title": "Sample of an Object Card With Icons",
		"subTitle": "Sample of an Object Card With Icons",
		"applicationVersion": {
			"version": "1.0.0"
		},
		"shortTitle": "A short title for this Card",
		"info": "Additional information about this Card",
		"description": "A long description for this Card",
		"tags": {
			"keywords": [
				"Object",
				"Icon",
				"Card",
				"Sample"
			]
		}
	},
	"sap.ui": {
		"technology": "UI5",
		"icons": {
			"icon": "sap-icon://switch-classes"
		}
	},
	"sap.card": {
		"type": "Object",
		"configuration": {
			"parameters": {
				"visibleCompanyFields": {
					"value": ["companyDetails", "companyName"]
				}
			}
		},
		"data": {
			"json": {
				"title": "Project Team Overview",
				"subtitle": "Current Status and Metrics",
				"billing": "RN47565.0.1",
				"customer": "Domestic US Customer 1",
				"photo": "./images/team.jpg",
				"fit": "Cover",
				"team": {
				    "manager": {
					    "firstName": "Donna",
					    "lastName": "Moore",
					    "photo": "./images/example3.jpg",
					    "fit": "Contain"
				    },
				    "supervisor": {
				    	"firstName": "Alain",
				    	"lastName": "Chevalier",
				    	"photo": "./images/supervisor.png",
				    	"fit": "Cover"
				    },
					"productOwner": {
						"firstName": "Jaison",
						"lastName": "Kothari",
						"photo": "./images/Laurent_Dubois.png",
						"fit": "Contain"
					}
				}
			}
		},
		"header": {
			"icon": {
				"src": "{photo}",
				"fitType": "{fit}"
			},
			"title": "{title}",
			"subtitle": "{subtitle}",
			"infoSection": {
				"rows": [
					{
						"items": [
							{
								"type": "Status",
								"value": "On Track",
								"state": "Success",
								"inverted": true,
								"showStateIcon": true
							}
						]
					}
				]
			}
		},
		"content": {
			"groups": [
				{
					"title": "Project Details",
					"items": [
						{
							"label": "Billing Element",
							"value": "{billing}"
						},
						{
							"label": "Customer",
							"value": "{customer}"
						}
					]
				},
				{
					"title": "Team Members",
					"items": [
						{
							"label": "Direct Manager",
							"value": "{team/manager/firstName} {team/manager/lastName}",
							"icon": {
								"src": "{team/manager/photo}",
								"fitType": "{team/manager/fit}"
							}
						},
						{
							"label": "Supervisor",
							"value": "{team/supervisor/firstName} {team/supervisor/lastName}",
							"icon": {
								"src": "{team/supervisor/photo}",
								"fitType": "{team/supervisor/fit}"
							}
						},
						{
							"label": "Product owner",
							"value": "{team/productOwner/firstName} {team/productOwner/lastName}",
							"icon": {
								"src": "{team/productOwner/photo}",
								"fitType": "{team/productOwner/fit}"
							}
						}
					]
				}
			]
		}
	}
}