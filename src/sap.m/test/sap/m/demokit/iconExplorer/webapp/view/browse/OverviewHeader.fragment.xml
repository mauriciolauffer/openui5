<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core">
	<f:DynamicPageHeader pinnable="false">
		<FlexBox wrap="Wrap">
			<VBox class="sapUiSmallMarginEnd">
				<Label text="Library:" labelFor="libraryPicker" />
				<Select id="libraryPicker"
						change=".onChangeFont"
						selectedKey="{path: 'view>/fontName', mode: 'OneWay'}"
						items="{
						path: '/AllFonts',
						sorter: {
							path: 'name',
							descending: false
						}
					}">
					<core:Item key="{name}" text="{
							path: 'name',
							formatter: '.formatter.fontName'
						}" />
				</Select>
			</VBox>
			<VBox class="sapUiSmallMarginEnd">
				<Label text="Theme:" labelFor="themePicker"/>
				<Select
					id="themePicker"
					change="handleThemeSelection"
					selectedKey="{view>/SelectedTheme}">
					<core:Item key="light" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_HORIZON_LIGHT}" />
					<core:Item key="dark" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_HORIZON_DARK}" />
					<core:Item key="hcw" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_HORIZON_HCW}" />
					<core:Item key="hcb" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_HORIZON_HCB}" />
					<core:Item key="auto" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_AUTO}" />
					<core:Item key="sap_fiori_3" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_FIORI3_LIGHT}" />
					<core:Item key="sap_fiori_3_dark" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_FIORI3_DARK}" />
					<core:Item key="sap_fiori_3_hcw" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_FIORI3_HCW}" />
					<core:Item key="sap_fiori_3_hcb" text="{i18n>APP_INFORMATION_BTN_APPEARANCE_FIORI3_HCB}" />
				</Select>
			</VBox>
			<VBox
				id="categorySelectionContainer"
				visible="{= ${device>/system/phone} ? false : true}"
				class="sapUiSmallMarginEnd">
				<Label text="Category:" labelFor="categorySelection" />
				<ComboBox
					id="categorySelection"
					items="{groups}"
					tooltip="{i18n>overviewSelectCategoryTooltip}"
					selectionChange=".onSelectCategory"
					ariaLabelledBy="labelCategory"
					width="auto">
					<core:Item
						key="{name}"
						text="{text}"/>
				</ComboBox>
			</VBox>
			<VBox>
				<Label text="Search:" labelFor="searchField" />
				<SearchField
					id="searchField"
					liveChange=".onSearch"
					tooltip="{i18n>searchPlaceholder}"
					width="auto"
					ariaLabelledBy="labelIconSearch">
				</SearchField>
				<layoutData>
					<FlexItemData growFactor="1"/>
				</layoutData>
			</VBox>
		</FlexBox>
      <Toolbar
            visible="{= ${view>/iconFilterCount} !== 0 &amp;&amp; (${device>/system/phone} ? false : true)}"
            width="auto"
            design="Transparent"
            style="Clear">
            <Label text="{i18n>overviewTagSelectionLabel}" />
            <Tokenizer
                id="tagSelection"
                renderMode="Narrow"
                editable="false"
                width="100%"
                tokens="{
                    path: 'groups/0/tags',
                    factory: '._tagSelectionFactory',
                    length: 50
                }">
            </Tokenizer>
        </Toolbar>
	</f:DynamicPageHeader>
</core:FragmentDefinition>