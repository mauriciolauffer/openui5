<mvc:View
	height="100%"
	displayBlock="true"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:f="sap.f"
	xmlns:core="sap.ui.core"
	xmlns:mdc="sap.ui.mdc"
	xmlns:mdct="sap.ui.mdc.table"
	xmlns:plugins="sap.m.plugins"
	>
	<f:DynamicPage id="page">
		<f:content>
			<VBox gap="0.5rem">
				<MessageStrip
					showIcon="true"
					showCloseButton="true"
					text="This sample demonstrates how to position custom actions in the toolbar. The actions themselves have no functionality."/>
				<mdc:Table
					id="table"
					header="Mountains"
					p13nMode="Column,Sort,Group,Filter"
					selectionMode="Multi"
					showPasteButton="true"
					enablePaste="true"
					enableExport="true"
					showRowCount="true"
					delegate="{
						name: 'mdc/sample/delegate/JSONTableDelegate',
						payload: {
							bindingPath: 'mountains>/mountains'
						}
					}">
					<mdc:actions>
						<Button text="Edit">
							<layoutData>
								<mdct:ActionLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
						<Button text="Delete">
							<layoutData>
								<mdct:ActionLayoutData priority="NeverOverflow"/>
							</layoutData>
						</Button>
					</mdc:actions>
					<mdc:tableActions>
						<Button icon="sap-icon://scissors">
							<layoutData>
								<mdct:ActionLayoutData position="ModificationActions"/>
							</layoutData>
						</Button>
						<Button icon="sap-icon://sort">
							<layoutData>
								<mdct:ActionLayoutData position="ModificationActionsEnd"/>
							</layoutData>
						</Button>
						<Button icon="sap-icon://print">
							<layoutData>
								<mdct:ActionLayoutData position="ExportActions"/>
							</layoutData>
						</Button>
						<Button icon="sap-icon://share-2">
							<layoutData>
								<mdct:ActionLayoutData position="ShareActions"/>
							</layoutData>
						</Button>
						<SegmentedButton selectedKey="table">
							<items>
								<SegmentedButtonItem icon="sap-icon://table-view" key="table"/>
								<SegmentedButtonItem icon="sap-icon://bar-chart" key="chart"/>
							</items>
							<layoutData>
								<mdct:ActionLayoutData position="ViewActions"/>
							</layoutData>
						</SegmentedButton>
						<Button icon="sap-icon://full-screen">
							<layoutData>
								<mdct:ActionLayoutData position="ViewActions"/>
							</layoutData>
						</Button>
						<Button icon="sap-icon://sys-help">
							<layoutData>
								<mdct:ActionLayoutData position="EndActions"/>
							</layoutData>
						</Button>
					</mdc:tableActions>
					<mdc:copyProvider>
						<plugins:CopyProvider></plugins:CopyProvider>
					</mdc:copyProvider>
					<mdc:type>
						<mdct:ResponsiveTableType showDetailsButton="true"></mdct:ResponsiveTableType>
					</mdc:type>
					<mdct:Column
						propertyKey="name"
						header="Name">
						<Text text="{mountains>name}"/>
					</mdct:Column>
					<mdct:Column
						propertyKey="range"
						header="Range">
						<Text text="{mountains>range}"/>
					</mdct:Column>
					<mdct:Column
						propertyKey="first_ascent"
						header="First Ascent">
						<Text text="{mountains>first_ascent}"/>
					</mdct:Column>
					<mdct:Column
						propertyKey="countries"
						header="Countries">
						<Text text="{mountains>countries}"/>
					</mdct:Column>
					<mdct:Column
						propertyKey="parent_mountain"
						header="Parent Mountain"
						width="100rem">
						<Text text="{mountains>parent_mountain}"/>
						<mdct:extendedSettings>
							<mdct:ResponsiveColumnSettings importance="Low"></mdct:ResponsiveColumnSettings>
						</mdct:extendedSettings>
					</mdct:Column>
				</mdc:Table>
			</VBox>
		</f:content>
	</f:DynamicPage>
</mvc:View>