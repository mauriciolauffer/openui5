<mvc:View
	height="100%"
	controllerName="sap.m.sample.MultiInput.controller.MultiInput"
	xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<l:VerticalLayout
		class="sapUiContentPadding"
		width="100%">
		<Label text="Enter a search term, e.g. “Notebook”, and add matching products as tokens" width="100%" labelFor="multiInput"/>
		<MultiInput width="70%"
			showClearIcon="true"
			id="multiInput"
			suggestionItems="{
				path: '/ProductCollection',
				sorter: { path: 'Name' }
			}"
			placeholder="Products..."
			showValueHelp="false">
			<core:Item key="{ProductId}" text="{Name}" />
		</MultiInput>
		<Label text="MultiInput with pre-selected tokens" labelFor="multiInput1" placeholder="Type something and press enter to create token..."/>
		<MultiInput id="multiInput1" showSuggestion="false" width="70%" showValueHelp="false"/>
		<Label text="MultiInput with single long token" labelFor="multiInput2" placeholder="Single long token.."/>
		<MultiInput id="multiInput2" showSuggestion="false" width="300px" showValueHelp="false" />
	</l:VerticalLayout>
</mvc:View>
