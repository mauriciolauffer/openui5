<mvc:View
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:w="sap.ui.integration.widgets"
	displayBlock="true">
	<Page title="{i18n>appTitle}">
		<subHeader>
			<Toolbar>
				<ToolbarSpacer />
				<Title text="Adaptive Card" />
				<ToolbarSpacer/>
			</Toolbar>
		</subHeader>

		<mvc:View viewName="sap.f.cardsdemo.view.common.CommonCardSettings" type="XML" async="true"></mvc:View>
		<Panel>
			<w:Card
				id="adaptivecard1"
				manifest="{manifests>/adaptiveCard/adaptive1}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard2"
				manifest="{manifests>/adaptiveCard/adaptive2}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard3"
				manifest="{manifests>/adaptiveCard/adaptive3}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard4"
				manifest="{manifests>/adaptiveCard/adaptive4}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard5_containerStyles"
				manifest="{manifests>/adaptiveCard/adaptive5_containerStyles}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard6_foregroundColors"
				manifest="{manifests>/adaptiveCard/adaptive6_foregroundColors}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard7_fontSizes"
				manifest="{manifests>/adaptiveCard/adaptive7_fontSizes}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
			<w:Card
				id="adaptivecard8_separators"
				manifest="{manifests>/adaptiveCard/adaptive8_separators}"
				baseUrl="{cardsPlayground>/playgroundBaseUrl}"
				width="700px"
				height="auto"
				class="sapUiSmallMargin" />
		</Panel>
	</Page>
</mvc:View>
